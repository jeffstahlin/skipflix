{
  "manifest_version": 2,

  "name": "Skipazon: Auto Skip PrimeVideo Intro",
  "short_name": "Skipazon",
  "description": "Skip opening credits automatically on PrimeVideo.",
  "version": "1.1.1",

  "browser_action": {
    "default_icon": "icon48.png"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.primevideo.com/*"],
      "js": ["autoskip.js"]
    }
  ]
}
