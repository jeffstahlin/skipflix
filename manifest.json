{
  "manifest_version": 2,

  "name": "Skipflix: Auto Skip Netflix Intro",
  "short_name": "Skipflix",
  "description": "Skip opening credits automatically on Netflix.",
  "version": "1.0",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/watch/*"],
      "js": ["autoskip.js"]
    }
  ]
}
